<div class="row">
    <h1>Enter your creadit card information:</h1>
    <form class="form add-creditCard-form">
      <div class="form-group">
        <label for="card-number">Card number:</label>
        <input class="form-input" type="number" id="creditcard-num"/>
      </div>
      <div class="form-group">
        <label for="holder-name">Name</label>
        <input class="form-input" type="text" id="username"/>
      </div>
      <div class="form-group">
        <label for="expire-month">Expired Month :</label>
        <input class="form-input" type="number" id="month"/>
      </div>
      <div class="form-group">
        <label for="expire-year">Expired Year:</label>
       <input class="form-input" type="number" id="year"/>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
       <input class="form-input" type="text" id="address"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="processpayment">Process Payment</button>
      </div>
    </form>
</div>