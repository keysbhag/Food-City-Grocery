<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&family=Playfair+Display+SC&display=swap" rel="stylesheet">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Food city grocery</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg custom-nav">
      <div class="container-fluid d-flex justify-content-between">
        <a class="Logo navbar-brand text-reset" href="/">Food City Grocery</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav custom-nav">
            <li class="nav-item">
              <a class="nav-link btn btn-success text-reset cust-btn" href="/">Home</a>
            </li>
          {{#if logged_in}}
            <li class="nav-item">
              <a class="nav-link btn btn-success text-reset cust-btn" href="/cart">Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-success text-reset cust-btn" href="/profile">Profile</a>
            </li>
            <li class="nav-item d-flex">
              <button class="btn btn-success text-reset cust-btn" id="logout">Logout</button>
            </li>

          {{else}}
            <li class="nav-item">
              <a class="nav-link btn btn-success text-reset cust-btn" href="/cart">Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-success text-reset cust-btn" href="/login">Login</a>
            </li>
          {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    <main class="container">
      {{{body}}}
    </main>
    <footer>

    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>