<section class="container">
  <h3 class="gallery-name">{{category_name}}</h3>
  <section class="d-flex">
    {{#each products as |product|}}
    <section class="card d-flex">
        <header>{{product.product_name}}</header>
        <div class="card-body">
          <img src="/images/{{filename}}" height="300" width="300">
          <p>Stock: {{product.stock}}</p>
          <p>Price: {{product.price}}</p>
          <button id="addcartbtn">Add to cart</button>
        </div>
    </section>
    {{/each}}
  </section>
</section>